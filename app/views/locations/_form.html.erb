
<%= form_for [@user, @location] do |f| %>

  <%= f.hidden_field :user_id %>

   <h3>
   	<%= f.label :address %>:
   	<%= f.text_field :address, size: "40x1"%><br>
   		
   	<%= f.label :lat, "Latitude" %>:
   	<%= f.number_field :lat, step: 0.01 %>


   	<%= f.label :lng, "Longitude" %>:
   	<%= f.number_field :lng, step: 0.01 %><br>

   	<%= f.label :description %>:
   	<%= f.text_area :description, placeholder: "Please describe the location", size: "53x6" %>

    <br>
    Location type:
      <%= f.fields_for :location do |loc| %>
      <%= loc.collection_select :loc_type, Location.all, :loc_type, :loc_type, prompt: true %>

    <% end %>
  

      <select name="location_id" id="location_id">
        <option value="1">Public</option>
        <option value="2">Private</option>
      </select>
     

  <br>
    Food type:
      <%= f.fields_for :edible do |le| %>
      <%= le.collection_select :edible_id, Edible.order('name ASC').all, :id, :name, {:prompt => true, :multiple=>true } %>
      <% end %>

  <br>
      Category:
      <%= f.fields_for :edible_category do |ec| %>
      <%= ec.collection_select :edble_category_id, EdibleCategory.all, :id, :name, include_blank: false %><br>
    <% end %>

   		<br>

     <%= f.submit%></h3>

    <% end %>
