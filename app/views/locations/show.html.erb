<%=javascript_include_tag "application" %>

<%= stylesheet_link_tag "application" %>
<div class="wrapper">

<h2>Details of location:</h2>

<h3>Location id: 
    #<%= @location.id %> </h3>

<h3>Address:</h3>
    <%= @location.address %> 
<br>
<h3>Latitude:</h3>
    <%= @location.lat %> 
<br>
<h3>Longitude:</h3>
    <%= @location.lng %> 

<h3>Location description:</h3>
<%= @location.description %>
<br>

<h3>Location type:</h3>
    <%= @location.loc_type %> 
<br>

<h3>Food available:</h3>
	<% @edibles.each do |edible| %>
	<%= edible.name %>
 <% end %>
<br>
<br>

<%= link_to "Edit this Location", edit_user_location_path(current_user)%>
<%= link_to 'Delete this location',  user_location_path(current_user),
    data: { confirm: 'Are you sure?' }, method: :destroy %>


</div>