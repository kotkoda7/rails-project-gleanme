<%= stylesheet_link_tag "application" %>
<div class="wrapper">

<h2>Details of location:</h2>

<h3>Location id: 
    #<%= @location.id %> </h3>

<h3>Address:</h3>
    <%= @location_address %> 
<br>
<h3>Latitude:</h3>
    <%= @location_lat %> 
<br>
<h3>Longitude:</h3>
    <%= @location_lng %> 

<h3>Location description:</h3>
<%= @location_description %>
<br>

<h3>Location type:</h3>
    <%= @location_loc_type %> 
<br>

<h3>Food available:</h3>


<%= @edibles.each do |e| %>

  <%= e.name %>
<% end %>


<br>


<br>
<br>

<%= link_to "Edit this Location", edit_user_location_path(current_user)%>


</div>
